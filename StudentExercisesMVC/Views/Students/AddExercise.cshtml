@model StudentExercisesMVC.Models.ViewModels.StudentAddExerciseViewModel

@{
    ViewData["Title"] = "AddExercise";
}

<h2>Add an Exercise to work on</h2>
<h4>@Model.Student.FullName</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddExercise">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Instructors" class="control-label"></label>
                <select asp-for="InstructorId" asp-items="@Model.Instructors"></select>
            </div>
            <div class="form-group">
                <label asp-for="Exercises" class="control-label"></label>
                <select asp-for="ExerciseId" asp-items="@Model.Exercises"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
